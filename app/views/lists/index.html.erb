<h1 class="text-center">Lists </h1>
<hr>
<%# <ul>
<li></li>
</ul> %>

<br>
<h3><%= link_to "Add list", new_list_path %></h3>
<br>
<div class="cards">
  <% @lists.each do |list| %>
    <% if list.photo.attached? %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key%>')">
        <%= link_to list.name.capitalize, list_path(list) %>
        <%= link_to list_path(list), method: :delete, data: { confirm: "Are you sure?" }   do %>
          <i class="far fa-trash-alt"></i>
        <% end %>

    <% elsif  list.movies.first != nil %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= list.movies.first.poster_url%>')">
        <%= link_to list.name.capitalize, list_path(list) %>
        <%= link_to list_path(list), method: :delete, data: { confirm: "Are you sure?" }   do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
    <% else %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path 'a2drzrpbfoklban5rsil'%>')">
        <%= link_to list.name.capitalize, list_path(list) %>
        <%= link_to list_path(list), method: :delete, data: { confirm: "Are you sure?" }   do %>
          <i class="far fa-trash-alt"></i>
        <% end %>
    <% end %>
      </div>
  <% end %>
</div>
